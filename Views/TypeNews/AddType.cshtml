@model Practice2.Models.TypeNew

@{
    ViewBag.Title = "Thêm mới loại tin";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên loại</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.typeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.typeName, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-info mt-2" />
            </div>
        </div>
    </div>
}

<div>
